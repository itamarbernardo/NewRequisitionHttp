<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Ligar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="actionButtonLampadaON"
        android:id="@+id/buttonLuz"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Desligar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="actionButtonLampadaOFF"
        android:id="@+id/buttonLuz2"
        android:layout_below="@+id/buttonLuz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLuz3"
        android:onClick="back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
