<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/air"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_margin="25dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="activityAir"
        />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/tv"
        android:id="@+id/imageButton4"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="activityTV"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/lampada"
        android:id="@+id/imageButton5"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="activityLuz"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/imageButton6"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="actionHome"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/imageButton7"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="gerarNotificacao"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />


</RelativeLayout>
